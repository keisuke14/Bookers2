

<body>
  <% if @book.errors.any? %>
    <h1> error </h1>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
          <table class="table">
            <tbody>
              <tr><%= attachment_image_tag current_user, :profile_image, fallback: "no-image.png", size:'100x100' %></tr>
              <tr>
                <th>name</th>
                <td><%= current_user.name %></td>
              </tr>
              <tr>
                <th>introduction</th>
                <td><%= current_user.introduction %></td>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <%= link_to '', edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
          </div>

          <h2>New book</h2>
          <%= form_with model: @user, local:true do |f| %>
            <div class="box">
              <label for="book_title">Title</label><br>
              <%= f.text_field :title %>
            </div>
            <div class="box">
              <label for="book_opinion">Opinion</label><br>
               <%= f.text_area :body %>
            </div>
          <div class="box">
          <%= f.submit 'Create Book' %>
          </div>
          <% end %>
        </div>

        <div class="col-xs-9">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
              </tr>
            <div class="table">
              <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, fallback: "no-image.png", size:'40x40' %></td>
                <td><%= user.name %></td>
                <td><%= user.introduction %></td>
                <td><%= link_to 'Show',user_path(user),class: 'btn-primary mr-3' %></td>
              </tr>
              <% end %>
              <tbody>
            </div>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>